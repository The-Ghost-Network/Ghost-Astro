---
const { action, name, content } = Astro.props;

interface Props {
    action: string;
    name: string;
    content: string;
}  
---

<div class="alertHidden">
    <div class="alert" id="alert">
        <div class="alertTitle">
            <slot name="title">{name}</slot>
        </div>
        <div class="alertContent">
            <slot name="content">{content}</slot>
        </div>
        <div class="alertActions">
            <slot name="actions">
                <button class="alertButton" onclick={action}>Ok</button>
            </slot>
        </div>
    </div>
</div>

<style is:global>

    @keyframes rise {
        0% {
            transform: translateY(100px);
        }
        100% {
            transform: translateY(0);
        }
    }

    .alertHidden {
        display: none;
    }

    .alertBg {
        background: rgba(0, 0, 0, 0.5);
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 9999;
    }

    .alert {
        animation: rise 0.3s cubic-bezier(0.35, 0.56, 0.85, 0.77);
        background-color: #1c1a1a;
        color: white;
        padding: 20px;
        border-radius: 10px;
        margin: 10px;
        z-index: 9999;
        width: 200px;
        height: 150px;
        top: 0px;
        bottom: 0px;
        left: 0px;
        right: 0px;
    }

    .alertButton {
        color: white;
        background-color: #2f2e2e;
        border: none;
        border-radius: 10px;
        padding: 10px;
        width: 20px;
        height: 10px;
    }

    .alertButton:hover {
        background-color: #3f3e3e;
    }
        </style>