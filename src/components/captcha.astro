    .rc-imageselect-tile {
        width: 100px;
        height: 100px;
        border: 1px solid #dcdcdc;
        border-radius: 4px;
        overflow: hidden;
        position: relative;
        cursor: pointer;
    }

    .rc-image-tile-target img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .rc-image-tile-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(26, 115, 232, 0.5);
        display: none;
    }

    .rc-imageselect-checkbox {
        position: absolute;
        bottom: 8px;
        right: 8px;
        width: 16px;
        height: 16px;
        border: 2px solid #fff;
        background-color: #1a73e8;
        border-radius: 50%;
        display: none;
    }

    .rc-imageselect-tile.selected .rc-image-tile-overlay,
    .rc-imageselect-tile.selected .rc-imageselect-checkbox {
        display: block;
    }

    .controls {
        margin-top: 16px;
        text-align: center;
    }

    .captchaBttn,
