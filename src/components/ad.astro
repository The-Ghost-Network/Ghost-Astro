<style is:global>
    .ad {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        border-radius: 10px;
        max-width: 300px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        color: black;
    }

    .ad-top-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 10px;
        border-bottom: 1px solid hsl(45, 40%, 80%);
    }

    .ad-close {
        border-radius: 50%;
        background-color: transparent;
        border: none;
        padding: 5px 10px;
    }

    .ad-close:hover {
        cursor: pointer;
        color: hsl(45, 40%, 60%);
    }

    .ad-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }

    .slogan {
        color: gray;
        font-size: 18px;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .ad-desc {
        font-size: 14px;
        margin-bottom: 10px;
    }

